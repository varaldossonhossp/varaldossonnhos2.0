{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "pages/**/*.html", "use": "@vercel/static" },
    { "src": "componentes/**/*", "use": "@vercel/static" },
    { "src": "css/**/*", "use": "@vercel/static" },
    { "src": "js/**/*", "use": "@vercel/static" },
    { "src": "imagens/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/pontosdecoleta", "dest": "/api/pontosdecoleta.js" },
    
    { "src": "/api/(.*)", "dest": "/api/$1.js" },

    { "src": "^/$", "dest": "/index.html" },

    
    { "src": "^/pages/(.*)$", "dest": "/pages/$1" },
    { "src": "^/componentes/(.*)$", "dest": "/componentes/$1" },
    { "src": "^/css/(.*)$", "dest": "/css/$1" },
    { "src": "^/js/(.*)$", "dest": "/js/$1" },
    { "src": "^/imagens/(.*)$", "dest": "/imagens/$1" },

    
    { "src": "^/cartinhas$", "dest": "/pages/cartinhas.html" },
    { "src": "^/carrinho$", "dest": "/pages/carrinho.html" },
    { "src": "^/admin$", "dest": "/pages/admin.html" },
    { "src": "^/pontosdecoleta$", "dest": "/pages/pontosdecoleta.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}